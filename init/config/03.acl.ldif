dn: olcDatabase={2}mdb,cn=config
changetype: modify
replace: olcAccess
olcAccess: {0}to attrs=userPassword 
  by dn="cn=cn=Manager,%LDAP_DOMAIN%" write 
  by anonymous auth 
  by self write 
  by * none
olcAccess: {1}to dn.children=ou=users,%LDAP_DOMAIN%
  by self write 
  by dn="cn=Manager,%LDAP_DOMAIN%" write 
  by group="cn=managers,ou=groups,%LDAP_DOMAIN%" write
  by * none
olcAccess: {2}to dn.subtree=ou=groups,%LDAP_DOMAIN%
  by dn="cn=Manager,%LDAP_DOMAIN%" write 
  by group="cn=managers,ou=groups,%LDAP_DOMAIN%" write
  by * none
olcAccess: {3}to *
  by anonymous auth
  by * read